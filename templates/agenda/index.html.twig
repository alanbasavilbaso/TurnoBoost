{% extends 'base.html.twig' %}

{% block title %}Agenda{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('styles/agenda.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container-fluid">
    
    <div class="agenda-container">
        <!-- Sidebar con filtros y mini calendario -->
        <div class="sidebar">
            <!-- Filtros -->
            <div class="filters-section">
                <h6 class="mb-3"><i class="fas fa-filter me-2"></i>Filtros</h6>
                
                <!-- Nuevo filtro de Location -->
                <div class="mb-3">
                    <label for="locationFilter" class="form-label">Ubicación</label>
                    <select class="form-select" id="locationFilter">
                        {% for location in locations %}
                            <option value="{{ location.id }}" {% if loop.first %}selected{% endif %}>
                                {{ location.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                
                <div class="mb-3">
                    <label for="professionalFilter" class="form-label">Profesional</label>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle w-100" 
                                type="button" 
                                id="professionalFilterDropdown" 
                                data-bs-toggle="dropdown" 
                                data-bs-auto-close="outside"
                                aria-expanded="false">
                            <span id="professionalFilterText">Todos los profesionales</span>
                        </button>
                        <ul class="dropdown-menu w-100 px-3" aria-labelledby="professionalFilterDropdown" id="professionalFilterMenu">
                            <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="professionals[]" value="all" id="prof_all" checked>
                                    <label class="form-check-label" for="prof_all">
                                        Todos los profesionales
                                    </label>
                                </div>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            {% for professional in professionals %}
                            <li>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="professionals[]" value="{{ professional.id }}" id="prof_{{ professional.id }}">
                                    <label class="form-check-label" for="prof_{{ professional.id }}">
                                        {{ professional.name }}
                                    </label>
                                </div>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="serviceFilter" class="form-label">Servicio</label>
                    <select class="form-select" id="serviceFilter">
                        <option value="">Todos los servicios</option>
                        {% for service in services %}
                            <option value="{{ service.id }}">{{ service.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                
            </div>
            
            <!-- Mini Calendario -->
            <div class="mini-calendar-section">
                <h6 class="mb-3"><i class="fas fa-calendar-alt me-2"></i>Navegación</h6>
                <div id="miniCalendar" class="mini-calendar"></div>
            </div>
        </div>
        
        <!-- Calendario Principal -->
        <div class="main-calendar">
            <!-- Header personalizado -->
            <div class="custom-header">
                <div class="nav-controls">
                    <button class="nav-btn" id="todayBtn">
                    Hoy
                    </button>
                    <button class="nav-btn" id="prevBtn">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <button class="nav-btn" id="nextBtn">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                    
                </div>
                
                <span id="currentDateHeader"></span>
                
                <div class="view-controls">
                    <!-- Botones de vista ocultos - la vista se determina automáticamente -->
                    
                    <!-- Botón de intervalos sigue visible -->
                    <div class="dropdown ms-3">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="timeIntervalDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-clock me-1"></i>30 min
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="timeIntervalDropdown">
                            <li><a class="dropdown-item" href="#" data-interval="5">5 minutos</a></li>
                            <li><a class="dropdown-item" href="#" data-interval="10">10 minutos</a></li>
                            <li><a class="dropdown-item" href="#" data-interval="15">15 minutos</a></li>
                            <li><a class="dropdown-item" href="#" data-interval="20">20 minutos</a></li>
                            <li><a class="dropdown-item active" href="#" data-interval="30">30 minutos</a></li>
                            <li><a class="dropdown-item" href="#" data-interval="40">40 minutos</a></li>
                            <li><a class="dropdown-item" href="#" data-interval="45">45 minutos</a></li>
                            <li><a class="dropdown-item" href="#" data-interval="60">60 minutos</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <!-- Contenido del calendario -->
            <div class="calendar-content">
                <!-- FullCalendar (para vista semana/mes) -->
                <div id="calendar"></div>
                
                <!-- Vista de columnas por profesional (para vista día con múltiples profesionales) -->
                <div id="professionalsColumns" class="professionals-columns">
                    <div class="professionals-header" id="professionalsHeader">
                        <div class="time-column">Hora</div>
                    </div>
                    <div class="time-slots" id="timeSlots"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Crear/Editar Turno -->
<div class="modal fade" id="appointmentModal" tabindex="-1" aria-labelledby="appointmentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="appointmentModalLabel">Nuevo Turno</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="appointment-form">
                    <input type="hidden" id="appointment-id" name="id">
                    <input type="hidden" id="appointment-location-id" name="location_id">
                    <div id="time-validation-message" class="hide">
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="appointment-date" class="form-label">Fecha *</label>
                            <input type="date" class="form-control" id="appointment-date" name="date" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Hora desde *</label>
                            <div class="row">
                                <div class="col-5">
                                    <select class="form-select" id="appointment-hour-from" name="hour_from" required>
                                        <option value="">Hora</option>
                                        {% for hour in 0..23 %}
                                            <option value="{{ '%02d'|format(hour) }}" {% if hour == 9 %}selected{% endif %}>{{ '%02d'|format(hour) }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-5">
                                    <select class="form-select" id="appointment-minute-from" name="minute_from" required>
                                        <option value="">Min</option>
                                        {% for minute in 0..59 %}
                                            <option value="{{ '%02d'|format(minute) }}" {% if minute == 0 %}selected{% endif %}>{{ '%02d'|format(minute) }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <!-- Hora hasta - Se muestra solo cuando se selecciona un servicio -->
                        <div id="time-until-container" class="col-md-4 mb-3 hide">
                            <label class="form-label">Hora hasta *</label>
                            <div class="row">
                                <div class="col-5">
                                    <select class="form-select" id="appointment-hour-to" name="hour_to">
                                        <option value="">Hora</option>
                                        {% for hour in 0..23 %}
                                            <option value="{{ '%02d'|format(hour) }}" {% if hour == 9 %}selected{% endif %}>{{ '%02d'|format(hour) }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-5">
                                    <select class="form-select" id="appointment-minute-to" name="minute_to">
                                        <option value="">Min</option>
                                        {% for minute in 0..59 %}
                                            <option value="{{ '%02d'|format(minute) }}" {% if minute == 0 %}selected{% endif %}>{{ '%02d'|format(minute) }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="modal-professional" class="form-label">Profesional *</label>
                            <select class="form-select" id="modal-professional" name="professional" required>
                                <option value="">Seleccionar profesional...</option>
                                {% for professional in professionals %}
                                    <option value="{{ professional.id }}">{{ professional.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="modal-service" class="form-label">Servicio *</label>
                            <select class="form-select" id="modal-service" name="service" required>
                                <option value="">Seleccionar servicio...</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="patient-search" class="form-label">Buscar Paciente</label>
                        <input type="text" class="form-control" id="patient-search" autocomplete="off" autocorrect="off" autocapitalize="off" placeholder="Escriba el nombre, email o teléfono del paciente...">
                        <input type="hidden" id="selected-patient-id" name="patient_id">
                        <div id="patient-results"></div>
                        <div id="selected-patient-info"></div>
                    </div>
                    
                    <div class="mb-3">
                        <button type="button" class="btn btn-outline-primary w-100" id="create-new-patient">
                            <i class="fas fa-user-plus me-2"></i>Crear Nuevo Paciente
                        </button>
                    </div>
                    
                    <div id="new-patient-form" style="display: none;">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="patient-name" class="form-label">Nombre Completo *</label>
                                <input type="text" class="form-control" id="patient-name" name="patient_name">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="patient-email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="patient-email" name="patient_email">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="patient-phone" class="form-label">Teléfono *</label>
                                <input type="tel" class="form-control" id="patient-phone" name="patient_phone">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="patient-birth-date" class="form-label">Fecha de Nacimiento</label>
                                <input type="date" class="form-control" id="patient-birth-date" name="patient_birth_date">
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="appointment-notes" class="form-label">Notas</label>
                        <textarea class="form-control" id="appointment-notes" name="notes" rows="3" placeholder="Notas adicionales sobre el turno..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="save-appointment">
                    <i class="fas fa-save me-2"></i>Guardar Turno
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Ver Detalles del Turno -->
<!-- Modal de Detalles del Turno -->
<div class="modal fade" id="appointmentDetailsModal" tabindex="-1" aria-labelledby="appointmentDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="appointmentDetailsModalLabel">Detalles del Turno</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-user"></i> Información del Paciente</h6>
                            </div>
                            <div class="card-body">
                                <p><strong>Nombre:</strong> <span id="detailPatientName"></span></p>
                                <p><strong>Email:</strong> <span id="detailPatientEmail"></span></p>
                                <p><strong>Teléfono:</strong> <span id="detailPatientPhone"></span></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-calendar-alt"></i> Información del Turno</h6>
                            </div>
                            <div class="card-body">
                                <p><strong>Fecha:</strong> <span id="detailAppointmentDate"></span></p>
                                <p><strong>Hora:</strong> <span id="detailAppointmentTime"></span></p>
                                <p><strong>Duración:</strong> <span id="detailAppointmentDuration"></span></p>
                                <p><strong>Estado:</strong> <span id="detailAppointmentStatus" class="badge"></span></p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-user-md"></i> Profesional</h6>
                            </div>
                            <div class="card-body">
                                <p><strong>Nombre:</strong> <span id="detailProfessionalName"></span></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-cogs"></i> Servicio</h6>
                            </div>
                            <div class="card-body">
                                <p><strong>Servicio:</strong> <span id="detailServiceName"></span></p>
                                <p><strong>Precio:</strong> <span id="detailServicePrice"></span></p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card mb-3" id="detailNotesCard" style="display: none;">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-sticky-note"></i> Notas</h6>
                    </div>
                    <div class="card-body">
                        <p id="detailAppointmentNotes"></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="editAppointmentBtn">
                    <i class="fas fa-edit"></i> Editar Turno
                </button>
                <button type="button" class="btn btn-danger" id="cancelAppointmentBtn">
                    <i class="fas fa-times"></i> Cancelar TURNO
                </button>
                <button type="button" class="btn btn-success" id="completeAppointmentBtn">
                    <i class="fas fa-check"></i> Marcar como completado
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmación -->
<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    Confirmar Acción
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <div class="mb-3">
                        <i id="confirmationIcon" class="fas fa-question-circle fa-3x text-warning"></i>
                    </div>
                    <p id="confirmationMessage" class="fs-5 mb-0">¿Está seguro de realizar esta acción?</p>
                    <p id="confirmationSubtext" class="text-muted mt-2">Esta acción no se puede deshacer.</p>
                </div>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger" id="confirmActionBtn">
                    <i class="fas fa-check me-2"></i>Confirmar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Alerta de Disponibilidad -->
<div class="modal fade" id="availabilityAlertModal" tabindex="-1" aria-labelledby="availabilityAlertModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div class="mb-3">
                    <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="fas fa-exclamation-triangle text-warning" style="font-size: 2rem;"></i>
                    </div>
                </div>
                <h4 class="modal-title mb-3" id="availabilityAlertModalLabel">Alerta sobre reserva</h4>
                <div id="availabilityAlertMessage" class="mb-4">
                    <!-- El mensaje se insertará dinámicamente -->
                </div>
            </div>
            <div class="modal-footer border-0 pt-0 justify-content-center gap-3">
                <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-warning px-4" id="forceCreateAppointment">Guardar reserva</button>
            </div>
        </div>
    </div>
</div>


<!-- Modal de alerta de bloqueo -->
<div class="modal fade" id="blockAlertModal" tabindex="-1" aria-labelledby="blockAlertModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div class="mb-3">
                    <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="fas fa-ban text-danger" style="font-size: 2rem;"></i>
                    </div>
                </div>
                <h4 class="modal-title mb-3" id="blockAlertModalLabel">Horario Bloqueado</h4>
                <div id="blockAlertMessage" class="mb-4">
                    <!-- El mensaje se insertará dinámicamente -->
                </div>
            </div>
            <div class="modal-footer border-0 pt-0 justify-content-center gap-3">
                <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger px-4" id="forceCreateBlockedAppointment">Guardar de todas formas</button>
            </div>
        </div>
    </div>
</div>

<!-- Loading Spinner -->
<div id="loading-spinner" class="loading-spinner" style="display: none;">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Cargando...</span>
    </div>
</div>


<!-- Botón flotante con opciones -->
<div class="floating-action-container">
    <div class="floating-options" id="floatingOptions">
        <button class="floating-option" id="reserveOption" data-bs-toggle="modal" data-bs-target="#appointmentModal">
            <i class="fas fa-calendar-plus"></i>
            <span>Reservar</span>
        </button>
        <button class="floating-option" id="blockOption">
            <i class="fas fa-ban"></i>
            <span>Bloqueo horario</span>
        </button>
    </div>
    <button class="floating-action-btn" id="floatingActionBtn">
        <i class="fas fa-plus" id="floatingIcon"></i>
    </button>
</div>

