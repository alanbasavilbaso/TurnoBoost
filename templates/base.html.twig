        <!-- Auto-hide success messages after 2 seconds -->
        <script>
        function autoHideSuccessAlerts() {
            const successAlerts = document.querySelectorAll('.alert-success');
            
            if (successAlerts.length > 0) {
                successAlerts.forEach((alert) => {
                    setTimeout(() => {
                        if (alert && alert.parentNode) {
                            alert.style.transition = 'opacity 0.5s ease';
                            alert.style.opacity = '0';
                            setTimeout(() => {
                                if (alert && alert.parentNode) {
                                    alert.remove();
                                }
                            }, 500);
                        }
                    }, 2000);
                });
            }
        }
        
        // Ejecutar cuando el DOM est√© listo
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', autoHideSuccessAlerts);
        } else {
            autoHideSuccessAlerts();
        }
        
        // Tambi√©n ejecutar despu√©s de un peque√±o delay por si los mensajes se cargan din√°micamente
        setTimeout(autoHideSuccessAlerts, 100);
        </script>
        
