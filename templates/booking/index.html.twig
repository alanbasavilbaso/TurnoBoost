{% extends 'booking_base.html.twig' %}

{% block title %}
    {% if selectedLocation %}
        {{ selectedLocation.name }} - {{ company.name }}
    {% else %}
        {{ company.name }} - Reserva tu cita
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/booking.css') }}">
     <style>
        :root {
            --primary-color: {{ company.primaryColor }};
            --primary-dark: {{ company.primaryColor }}D9; /* Versión más oscura */
        }
    </style>
{% endblock %}

{% block body %}
<div class="header-container position-fixed top-0 start-0 end-0">
    <div class="row p-2">
        <div class="col-10 offset-1 d-flex align-items-center">
            {% if company.logoUrl %}
                <img src="{{ company.logoUrl }}?w=80&h=40&fit=crop&auto=compress,format" alt="{{ company.name }}" class="company-logo me-3">
            {% endif %}
            <span class="h5 mb-0 company-name">{{ company.name }}</span>
        </div>
    </div>
</div>

<div class="container-fluid py-4 mt-5 mb-5" data-location-id="{{ selectedLocation ? selectedLocation.id : '' }}" data-domain="{{ domain }}">
    <div class="row justify-content-center">
            {% if showLocationSelector %}
                <div class="col-12">
                    <!-- Selector de ubicación cuando hay múltiples -->
                    <div class="card shadow-lg border-0 mb-4">
                        <div class="card-header bg-primary text-white text-center py-4">
                            {% if company.coverUrl %}
                                <div class="mb-3">
                                    <img src="{{ company.coverUrl }}?w=1100&h=200&fit=crop&auto=compress,format" alt="{{ company.name }}" class="company-cover">
                                </div>
                            {% endif %}
                            <h1 class="h3 mb-1">{{ company.name }}</h1>
                            <p class="mb-0 opacity-75">Selecciona una ubicación para continuar</p>
                        </div>
                        <div class="card-body p-4">
                            <div class="alert alert-info d-flex align-items-center mb-4">
                                <i class="fas fa-map-marker-alt me-2"></i>
                                <div>
                                    <h5 class="alert-heading mb-1">Selecciona una ubicación</h5>
                                    <p class="mb-0">{{ company.name }} tiene múltiples ubicaciones disponibles. Por favor, selecciona la que prefieras:</p>
                                </div>
                            </div>
                            
                            <div class="row g-3">
                                {% for location in locations %}
                                    <div class="col-12 col-md-6">
                                        <div class="card h-100 border-2 location-card" style="cursor: pointer;" onclick="selectLocation({{ location.id }})">
                                            <div class="card-body">
                                                <h5 class="card-title">{{ location.name }}</h5>
                                                {% if location.address %}
                                                    <p class="card-text small text-muted mb-2">
                                                        <i class="fas fa-map-marker-alt me-1"></i>
                                                        {{ location.address }}
                                                    </p>
                                                {% endif %}
                                                {% if location.phone %}
                                                    <p class="card-text small text-muted mb-2">
                                                        <i class="fas fa-phone me-1"></i>
                                                        {{ location.phone }}
                                                    </p>
                                                {% endif %}
                                                {% if location.description %}
                                                    <p class="card-text">{{ location.description }}</p>
                                                {% endif %}
                                            </div>
                                            <div class="card-footer bg-transparent">
                                                <button class="btn btn-primary w-100">
                                                    <i class="fas fa-calendar-alt me-1"></i> Reservar aquí
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            {% elseif showServiceSelector %}
                <div class="col-12 col-lg-8">
                    {% if company.coverUrl %}
                        <div class="mb-3">
                            <img id="alan" src="{{ company.coverUrl }}?w=800&h=400&fit=crop&auto=compress,format" alt="{{ company.name }}" class="company-cover">
                        </div>
                    {% endif %}
                </div>
                <div class="col-4 d-none d-lg-block">                
                    {% if selectedLocation and selectedLocation.address %}
                        <div class="company-info-card">
                            <div class="card shadow-sm border-0 h-100">
                                <div class="card-header bg-light" style="padding: 0;">
                                    <div style="display: flex; justify-content: center;">
                                        <iframe style="border-radius: 20px; width: 100%;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1636.2920079717642!2d-60.02155029353328!3d-34.891790757886085!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bea54bd7b33e49%3A0x5d52dd4f1973db59!2sGral.%20Rodr%C3%ADguez%20215%2C%20Chivilcoy%2C%20Provincia%20de%20Buenos%20Aires%2C%20Argentina!5e0!3m2!1ses!2sus!4v1758843450766!5m2!1ses!2sus"  height="250" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <!-- Dirección -->
                                    <div class="contact-item mb-1">
                                        <div class="d-flex align-items-start">
                                            <div class="contact-icon">
                                                <i class="fas fa-map-marker-alt text-primary"></i>
                                            </div>
                                            <div class="contact-details">
                                                <strong>Dirección:</strong> <span class="text-muted">{{ selectedLocation.address }}</span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Teléfono de la ubicación -->
                                    {% if selectedLocation.phone %}
                                    <div class="contact-item mb-1">
                                        <div class="d-flex align-items-start">
                                            <div class="contact-icon">
                                                <i class="fas fa-phone text-primary"></i>
                                            </div>
                                            <div class="contact-details">
                                                <strong>Teléfono:</strong>
                                                <a href="tel:{{ selectedLocation.phone }}" class="text-decoration-none text-black">
                                                    {{ selectedLocation.phone }}
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    {% endif %}

                                    <!-- WhatsApp de la empresa -->
                                    {% if company.phone %}
                                    <div class="contact-item mb-1">
                                        <div class="d-flex align-items-start">
                                            <a href="https://wa.me/{{ company.phone|replace({' ': '', '-': '', '(': '', ')': ''}) }}" 
                                                target="_blank" 
                                                class="btn btn-link text-black"
                                                style="padding:0;">
                                                <i class="fab fa-whatsapp text-primary"></i>
                                                ¡Contáctanos por Whatsapp!
                                            </a>
                                        </div>
                                    </div>
                                    {% endif %}

                                    <!-- Email de la ubicación -->
                                    {# {% if selectedLocation.email %}
                                    <div class="contact-item mb-3">
                                        <div class="d-flex align-items-start">
                                            <div class="contact-icon">
                                                <i class="fas fa-envelope text-primary"></i>
                                            </div>
                                            <div class="contact-details">
                                                <strong>Email:</strong>
                                                <a href="mailto:{{ selectedLocation.email }}" class="text-decoration-none">
                                                    {{ selectedLocation.email }}
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    {% endif %} #}

                                    <!-- Horarios si están disponibles -->
                                    {% if locationSchedule is defined and locationSchedule|length > 0 %}
                                    <div class="contact-item">
                                        <div class="d-flex align-items-center">
                                            <div class="contact-icon">
                                                <i class="fas fa-clock text-primary"></i>
                                            </div>
                                            <div class="contact-details">
                                                <button type="button" 
                                                        class="btn btn-link p-0 text-decoration-none schedule-tooltip-btn" 
                                                        data-bs-toggle="tooltip" 
                                                        data-bs-placement="top" 
                                                        data-bs-html="true"
                                                        data-bs-title="{% for schedule in locationSchedule %}<strong>{{ schedule.day }}:</strong> {{ schedule.times }}{% if not loop.last %}<br>{% endif %}{% endfor %}">
                                                    <strong>Ver horario</strong> 
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- Botón para mobile - Ubicación y horario -->
                <div class="col-12 d-lg-none mb-3">
                    <button type="button" class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#locationModal">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        Ubicación y horario
                    </button>
                </div>

                <div class="col-12">
                    <!-- Selector de servicios -->
                    <div class="card shadow-lg border-0 mb-4">

                        <div class="card-body p-4">
                            <div class="alert alert-info d-flex align-items-center mb-4">
                                <i class="fas fa-list-alt me-2"></i>
                                <div>
                                    <h5 class="alert-heading mb-1">Selecciona un servicio</h5>
                                    <p class="mb-0">Elige el servicio que deseas reservar:</p>
                                </div>
                            </div>
                            
                            <div class="row g-3">
                                {% for service in services %}
                                    <div class="col-12 col-md-6 col-lg-4">
                                        <div class="card h-100 border-2 service-card" style="cursor: pointer;" onclick="selectService({{ service.id }})">
                                            {% if service.imageUrl1 or service.imageUrl2 %}
                                                <div class="service-image-gallery">
                                                    <div class="service-image-container" id="service-gallery-{{ service.id }}">
                                                        {% if service.imageUrl1 %}
                                                            <div class="service-image-slide">
                                                                <img src="{{ service.imageUrl1 }}?w=400&h=150&fit=crop&auto=compress,format" alt="{{ service.name }} - Imagen 1" loading="lazy">
                                                            </div>
                                                        {% endif %}
                                                        {% if service.imageUrl2 %}
                                                            <div class="service-image-slide">
                                                                <img src="{{ service.imageUrl2 }}?w=400&h=150&fit=crop&auto=compress,format" alt="{{ service.name }} - Imagen 2" loading="lazy">
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                    
                                                    {% if service.imageUrl1 and service.imageUrl2 %}
                                                        <button class="service-gallery-nav prev" onclick="event.stopPropagation(); prevServiceImage({{ service.id }})">
                                                            <i class="fas fa-chevron-left"></i>
                                                        </button>
                                                        <button class="service-gallery-nav next" onclick="event.stopPropagation(); nextServiceImage({{ service.id }})">
                                                            <i class="fas fa-chevron-right"></i>
                                                        </button>
                                                        
                                                        <div class="service-gallery-indicators">
                                                            <div class="service-gallery-dot active" onclick="event.stopPropagation(); showServiceImage({{ service.id }}, 0)"></div>
                                                            <div class="service-gallery-dot" onclick="event.stopPropagation(); showServiceImage({{ service.id }}, 1)"></div>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            {% endif %}
                                            <div class="card-body d-flex flex-column">
                                                <h5 class="card-title">{{ service.name }}</h5>
                                                {% if service.description %}
                                                    <div class="service-description-container mb-3 flex-grow-1">
                                                        <p class="card-text text-muted service-description preserve-lines" data-full-text="{{ service.description }}">{{ service.description }}</p>
                                                        <button class="btn btn-link btn-sm p-0 text-primary expand-btn" style="display: none;">
                                                            <small>Ver más</small>
                                                        </button>
                                                        <button class="btn btn-link btn-sm p-0 text-primary collapse-btn" style="display: none;">
                                                            <small>Ver menos</small>
                                                        </button>
                                                    </div>
                                                {% endif %}
                                                
                                                <div class="service-badges mt-auto">
                                                    {% if service.shouldShowDurationOnBooking() and service.defaultDurationMinutes %}
                                                        <span class="badge bg-info me-2">
                                                            <i class="fas fa-clock me-1"></i>{{ service.defaultDurationMinutes }} min
                                                        </span>
                                                    {% endif %}
                                                    {% if service.shouldShowPriceOnBooking() and service.price %}
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-dollar-sign me-1"></i>{{ service.price|number_format(0, ',', '.') }}
                                                        </span>
                                                    {% endif %}
                                                </div>
                                            </div>
                                            <div class="card-footer bg-transparent">
                                                <button class="btn btn-primary w-100">
                                                    <i class="fas fa-calendar-alt me-1"></i> Seleccionar
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 col-md-10">
                    <!-- Wizard de Reserva -->
                    <div class="booking-wizard p-0">
                        <!-- Header con información de la clínica -->
                        <div class="wizard-header mb-1 p-2 position-fixed top-0 start-0 end-0">
                            <div class="row align-items-center">
                                <div class="col-4 text-start">
                                    <button type="button" class="btn btn-outline-secondary wizard-nav-btn" id="prev-step" style="display: none;">
                                        <i class="fas fa-arrow-left me-2"></i>Anterior
                                    </button>
                                </div>
                                
                                <div class="col-8 text-end">
                                    <button class="btn btn-link text-primary p-0" onclick="window.location.href = '/{{ domain }}'">
                                        <i class="fas fa-times me-2 fa-2x"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Indicador de progreso del wizard -->
                        <div class="wizard-progress mb-4 d-none">
                            <div class="progress-steps">
                                <div class="progress-step active" data-step="1">
                                    <div class="step-circle">
                                        <span class="step-number">1</span>
                                    </div>
                                    <span class="step-label">Profesional</span>
                                </div>
                                <div class="progress-step" data-step="2">
                                    <div class="step-circle">
                                        <span class="step-number">2</span>
                                    </div>
                                    <span class="step-label">Fecha y Hora</span>
                                </div>
                                <div class="progress-step" data-step="3">
                                    <div class="step-circle">
                                        <span class="step-number">3</span>
                                    </div>
                                    <span class="step-label">Contacto</span>
                                </div>
                            </div>
                        </div>

                        <!-- Resumen de selección -->
                        <div class="selection-summary mb-4 d-none">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="fas fa-clipboard-list me-2"></i>Tu Selección</h6>
                                    <div class="summary-item">
                                        <span class="summary-label">Servicio:</span>
                                        <span class="summary-value">{{ selectedService ? selectedService.name : 'No seleccionado' }}</span>
                                    </div>
                                    <div class="summary-item">
                                        <span class="summary-label">Profesional:</span>
                                        <span class="summary-value" id="selected-professional-display">
                                            {{ selectedProfessional ? selectedProfessional.name : 'Selecciona un profesional' }}
                                        </span>
                                    </div>
                                    <div class="summary-item">
                                        <span class="summary-label">Fecha:</span>
                                        <span class="summary-value pending" id="selected-date-display">Selecciona una fecha</span>
                                    </div>
                                    <div class="summary-item">
                                        <span class="summary-label">Hora:</span>
                                        <span class="summary-value pending" id="selected-time-display">Selecciona una hora</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Contenido del wizard -->
                        <div class="wizard-content">
                            <!-- Paso 1: Selección de Profesional -->
                            <div class="wizard-step active" id="step-1">
                                <div class="card shadow-sm border-0">
                                    <div class="card-header bg-white border-bottom border-top">
                                        <h5 class="mb-0">
                                            <i class="fas fa-user-md text-primary me-2"></i>
                                            Selecciona un Profesional
                                        </h5>
                                    </div>
                                    <div class="card-body p-0">
                                        {% if professionals is empty %}
                                            <div class="text-center py-5">
                                                <i class="fas fa-user-times fa-3x text-muted mb-3"></i>
                                                <h6 class="text-muted">No hay profesionales disponibles</h6>
                                                <p class="text-muted">No se encontraron profesionales para este servicio.</p>
                                            </div>
                                        {% else %}
                                            <div class="professionals-grid">
                                                {% for professional in professionals %}
                                                    <div class="professional-card" 
                                                        data-professional-id="{{ professional.id }}" 
                                                        data-professional-name="{{ professional.name }}">
                                                        {% if professional.profileImageUrl %}
                                                            <img src="{{ professional.profileImageUrl }}?w=120&h=120&fit=crop&auto=compress,format" alt="{{ professional.name }}" class="professional-image">
                                                        {% else %}
                                                            <div class="professional-avatar">
                                                                {{ professional.name|first|upper }}
                                                            </div>
                                                        {% endif %}
                                                        <h6>{{ professional.name }}</h6>
                                                        {% if professional.specialty %}
                                                            <p class="text-muted small mb-0">{{ professional.specialty }}</p>
                                                        {% endif %}
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            <!-- Paso 2: Selección de Fecha y Hora -->
                            <div class="wizard-step" id="step-2" style="display: none;">
                                <div class="card shadow-sm border-0">
                                    <div class="card-header bg-white border-bottom border-top">
                                        <h5 class="mb-0">
                                            <i class="fas fa-calendar-alt text-primary me-2"></i>
                                            Selecciona Fecha y Hora
                                        </h5>
                                    </div>
                                    <div class="card-body p-0">
                                        <!-- Selector de fechas horizontal -->
                                        <div class="date-selector mb-4">
                                            <!-- Días de la semana horizontales con navegación lateral -->
                                            <div class="days-horizontal-container position-relative">
                                                <button class="btn btn-outline-secondary date-nav-btn date-nav-prev" id="prev-days">
                                                    <i class="fas fa-chevron-left"></i>
                                                </button>
                                                
                                                <div class="days-horizontal-scroll" id="days-scroll-container">
                                                    <div class="days-horizontal" id="days-container">
                                                        <!-- Los días se generarán dinámicamente -->
                                                    </div>
                                                </div>
                                                
                                                <button class="btn btn-outline-secondary date-nav-btn date-nav-next" id="next-days">
                                                    <i class="fas fa-chevron-right"></i>
                                                </button>
                                            </div>
                                        </div>

                                        <!-- Horarios organizados por secciones -->
                                        <div class="timeslots-container" id="timeslots-container">
                                            <div id="timeslots-loading" class="text-center py-4" style="display: none;">
                                                <div class="spinner-border text-primary" role="status">
                                                    <span class="visually-hidden">Cargando...</span>
                                                </div>
                                                <p class="mt-2 text-muted">Cargando horarios disponibles...</p>
                                            </div>
                                            
                                            <div id="timeslots-content">
                                                <div class="text-center py-5 text-muted">
                                                    <i class="fas fa-clock fa-2x mb-3"></i>
                                                    <p>Selecciona una fecha para ver los horarios disponibles</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Paso 3: Datos de Contacto -->
                            <div class="wizard-step" id="step-3" style="display: none;">
                                <div class="card shadow-sm border-0">
                                    <div class="card-header bg-white border-bottom border-top">
                                        <h5 class="mb-0">
                                            <i class="fas fa-user text-primary me-2"></i>
                                            Datos de Contacto
                                        </h5>
                                    </div>
                                    <div class="card-body p-4">
                                        <form id="contact-form">
                                            <div class="row g-3">
                                                <div class="col-12 col-md-6">
                                                    <label for="patient-firstname" class="form-label">Nombre *</label>
                                                    <input type="text" class="form-control" id="patient-firstname" name="firstname" required>
                                                </div>
                                                <div class="col-12 col-md-6">
                                                    <label for="patient-lastname" class="form-label">Apellido *</label>
                                                    <input type="text" class="form-control" id="patient-lastname" name="lastname" required>
                                                </div>
                                                <div class="col-12 col-md-6">
                                                    <label for="patient-phone" class="form-label">Teléfono *</label>
                                                    <input type="tel" class="form-control" id="patient-phone" name="phone" required>
                                                </div>
                                                <div class="col-12 col-md-6">
                                                    <label for="patient-email" class="form-label">Email</label>
                                                    <input type="email" class="form-control" id="patient-email" name="email">
                                                </div>
                                                <!-- En el formulario de contacto, después del campo de notas -->
                                                <div class="col-12">
                                                    <label for="patient-notes" class="form-label">Notas adicionales</label>
                                                    <textarea class="form-control" id="patient-notes" name="notes" rows="3" placeholder="Información adicional que consideres importante..."></textarea>
                                                </div>
                                                
                                                <!-- Nuevo checkbox para recordar datos -->
                                                <div class="col-12 mt-3">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="remember-data" name="remember_data" checked>
                                                        <label class="form-check-label" for="remember-data">
                                                            <i class="fas fa-save me-1"></i>
                                                            Recordar mis datos para futuras reservas
                                                            <small class="text-muted d-block">Tus datos se guardarán temporalmente por 30 días</small>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Navegación del wizard -->
                        <div class="wizard-navigation position-fixed bottom-0 start-0 end-0">
                            <div class="d-flex justify-content-between align-items-center w-100">
                                <div class="col-6">
                                    <div class="service-summary">
                                        <h6 class="mb-1 text-dark fw-bold">{{ selectedService ? selectedService.name : 'Servicio seleccionado' }}</h6>
                                        <div class="service-details" id="service-details" style="display: none;">
                                            {% if selectedService and selectedService.shouldShowPriceOnBooking() %}
                                                <p class="mb-0 text-muted small">
                                                    <i class="fas fa-dollar-sign me-1"></i>
                                                    <span id="selected-price">{{ selectedService ? selectedService.price : '$0' }}</span>
                                                </p>
                                            {% endif %}
                                            <p class="mb-0 text-muted small">
                                                <i class="fas fa-calendar me-1"></i>
                                                <span id="selected-date">--</span>
                                            </p>
                                            <p class="mb-0 text-muted small">
                                                <i class="fas fa-clock me-1"></i>
                                                <span id="selected-time">--:-- hrs</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6 d-flex justify-content-end gap-2">
                                    <button type="button" class="btn btn-primary wizard-nav-btn" id="next-step">
                                        Siguiente</i>
                                    </button>
                                    <button type="button" class="btn btn-success wizard-nav-btn" id="confirm-booking" style="display: none;">
                                        <i class="fas fa-check me-2"></i>Confirmar Turno
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<!-- Pantalla de éxito -->
<div id="booking-success-screen" class="booking-success-screen d-none">
    <!-- Botón de cerrar -->
    <button type="button" class="btn-close-success" onclick="window.location.href='/{{ company.domain }}'">
        <i class="fas fa-times"></i>
    </button>
    
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="success-card text-center">
                    <div class="success-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
