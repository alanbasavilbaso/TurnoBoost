    <script>
        // Funciones para la galería de imágenes de servicios
        const serviceGalleries = {};
        
        function initServiceGallery(serviceId) {
            if (!serviceGalleries[serviceId]) {
                serviceGalleries[serviceId] = {
                    currentIndex: 0,
                    totalImages: document.querySelectorAll(`#service-gallery-${serviceId} .service-image-slide`).length
                };
            }
        }
        
        function showServiceImage(serviceId, index) {
            initServiceGallery(serviceId);
            const gallery = serviceGalleries[serviceId];
            const container = document.getElementById(`service-gallery-${serviceId}`);
            const dots = container.parentElement.querySelectorAll('.service-gallery-dot');
            
            gallery.currentIndex = index;
            container.style.transform = `translateX(-${index * 100}%)`;
            
            dots.forEach((dot, i) => {
                dot.classList.toggle('active', i === index);
            });
        }
        
        function nextServiceImage(serviceId) {
            initServiceGallery(serviceId);
            const gallery = serviceGalleries[serviceId];
            const nextIndex = (gallery.currentIndex + 1) % gallery.totalImages;
            showServiceImage(serviceId, nextIndex);
        }
        
        function prevServiceImage(serviceId) {
            initServiceGallery(serviceId);
            const gallery = serviceGalleries[serviceId];
            const prevIndex = gallery.currentIndex === 0 ? gallery.totalImages - 1 : gallery.currentIndex - 1;
            showServiceImage(serviceId, prevIndex);
        }
        
        // Auto-inicializar galerías al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('[id^="service-gallery-"]').forEach(gallery => {
                const serviceId = gallery.id.replace('service-gallery-', '');
                initServiceGallery(serviceId);
            });
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl, {
                    trigger: 'hover focus' // Para desktop hover, para mobile click/focus
                });
            });
        });
    </script>
