{% extends 'base.html.twig' %}

{% block title %}{{ clinic.name }} - TurnoBoost{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">
                    <i class="fas fa-hospital"></i> {{ clinic.name }}
                </h1>
                <div>
                    <a href="{{ path('clinic_edit', {'id': clinic.id}) }}" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a href="{{ path('clinic_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-info-circle"></i> Información de la Clínica</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">Nombre:</dt>
                                <dd class="col-sm-9">{{ clinic.name }}</dd>

                                <dt class="col-sm-3">Dirección:</dt>
                                <dd class="col-sm-9">{{ clinic.address }}</dd>

                                <dt class="col-sm-3">Teléfono:</dt>
                                <dd class="col-sm-9">
                                    <a href="tel:{{ clinic.phone }}" class="text-decoration-none">
                                        <i class="fas fa-phone"></i> {{ clinic.phone }}
                                    </a>
                                </dd>

                                <dt class="col-sm-3">Email:</dt>
                                <dd class="col-sm-9">
                                    <a href="mailto:{{ clinic.email }}" class="text-decoration-none">
                                        <i class="fas fa-envelope"></i> {{ clinic.email }}
                                    </a>
                                </dd>

                                <dt class="col-sm-3">Creada por:</dt>
                                <dd class="col-sm-9">{{ clinic.createdBy.name }}</dd>

                                <dt class="col-sm-3">Fecha de creación:</dt>
                                <dd class="col-sm-9">{{ clinic.createdAt|date('d/m/Y H:i') }}</dd>

                                {% if clinic.updatedAt %}
                                    <dt class="col-sm-3">Última actualización:</dt>
                                    <dd class="col-sm-9">{{ clinic.updatedAt|date('d/m/Y H:i') }}</dd>
                                {% endif %}
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Estadísticas</h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center">
                                <div class="mb-3">
                                    <h4 class="text-primary">{{ clinic.users|length }}</h4>
                                    <small class="text-muted">Usuarios</small>
                                </div>
                                <div class="mb-3">
                                    <h4 class="text-success">{{ clinic.professionals|length }}</h4>
                                    <small class="text-muted">Profesionales</small>
                                </div>
                                <div class="mb-3">
                                    <h4 class="text-info">{{ clinic.patients|length }}</h4>
                                    <small class="text-muted">Pacientes</small>
                                </div>
                                <div class="mb-3">
                                    <h4 class="text-warning">{{ clinic.services|length }}</h4>
                                    <small class="text-muted">Servicios</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow-sm mt-3">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-cogs"></i> Acciones</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="#" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-users"></i> Gestionar Profesionales
                                </a>
                                <a href="#" class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-user-injured"></i> Gestionar Pacientes
                                </a>
                                <a href="#" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-concierge-bell"></i> Gestionar Servicios
                                </a>
                                <a href="#" class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-calendar-alt"></i> Ver Turnos
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}