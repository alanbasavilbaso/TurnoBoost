<div class="location-form">
    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
    
    <!-- Campos básicos del formulario -->
    <div class="row mb-3">
        <div class="col-md-6">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    
    <div class="row mb-3">
        <div class="col-md-6">
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.address, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <!-- Sección de horarios -->
    <div class="schedule-container">
        <h5 class="mb-3">
            <i class="fas fa-clock me-2"></i>Horarios de Atención
        </h5>
        
        {% set days = ['Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado', 'Domingo'] %}
        
        {% for dayNumber in 0..6 %}
            <div class="schedule-row row align-items-center mb-2">
                <div class="col-md-2">
                    <div class="form-check">
                        {{ form_widget(attribute(form, 'day_' ~ dayNumber ~ '_enabled')) }}
                        {{ form_label(attribute(form, 'day_' ~ dayNumber ~ '_enabled'), days[dayNumber]) }}
                    </div>
                </div>
                
                <div class="col-md-10">
                    <div class="time-inputs">
                        <div class="d-flex align-items-center gap-2">
                            {{ form_widget(attribute(form, 'day_' ~ dayNumber ~ '_start_hour')) }}
                            <span>:</span>
                            {{ form_widget(attribute(form, 'day_' ~ dayNumber ~ '_start_minute')) }}
                            <span class="time-separator mx-2">a</span>
                            {{ form_widget(attribute(form, 'day_' ~ dayNumber ~ '_end_hour')) }}
                            <span>:</span>
                            {{ form_widget(attribute(form, 'day_' ~ dayNumber ~ '_end_minute')) }}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i>{{ is_edit ? 'Actualizar' : 'Crear' }} Local
        </button>
        <a href="{{ path('location_index') }}" class="btn btn-secondary ms-2">
            <i class="fas fa-times me-2"></i>Cancelar
        </a>
    </div>
    
    {{ form_end(form) }}
</div>
