{% extends 'base.html.twig' %}

{% block title %}Locales - TurnoBoost{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('styles/location.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="locations-container">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- Header Mejorado -->
                <div class="locations-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h2 mb-2" style="color: #2c3e50; font-weight: 700;">üè¢ Locales</h1>
                            <p class="text-muted mb-0" style="font-size: 1.1rem;">Gestiona tus <strong>ubicaciones de negocio</strong></p>
                        </div>
                        <!-- Bot√≥n Nuevo Local -->
                        <button type="button" class="btn btn-success" data-entity="local" data-action="new">
                            <i class="fas fa-plus me-2"></i>Nuevo Local
                        </button>
                    </div>
                </div>

                <!-- Flash Messages -->
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-radius: 15px; border: none; box-shadow: 0 4px 15px rgba(40, 167, 69, 0.2);">
                        <i class="fas fa-check-circle me-2"></i>{{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="border-radius: 15px; border: none; box-shadow: 0 4px 15px rgba(220, 53, 69, 0.2);">
                        <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                {% if locations is empty %}
                    <!-- Estado Vac√≠o Mejorado -->
                    <div class="empty-state-modern">
                        <div class="mb-4">
                            <i class="fas fa-map-marker-alt" style="font-size: 4rem; color: #28a745; margin-bottom: 1rem;"></i>
                        </div>
                        <h3 class="text-muted mb-3">üéØ No hay locales registrados</h3>
                        <p class="text-muted mb-4" style="font-size: 1.1rem;">Crea tu primer local para comenzar a gestionar turnos y servicios</p>
                    </div>
                {% else %}
                    <!-- Tabla de Locales Mejorada -->
                    <div class="table-card">
                        <div class="table-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h4 class="mb-0">
                                    <i class="fas fa-building me-2"></i>
                                    ({{ locations|length }})
                                </h4>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="position-relative">
                                        <i class="fas fa-search position-absolute" style="left: 1rem; top: 50%; transform: translateY(-50%); color: #6c757d; z-index: 10;"></i>
                                        <input type="text" 
                                               class="form-control search-input-header ps-5" 
                                               id="searchInput"
                                               placeholder="Buscar locales...">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-modern">
                                <thead>
                                    <tr>
                                        <th style="width: 30%;">Local</th>
                                        <th class="hide-md" style="width: 25%;">Direcci√≥n</th>
                                        <th style="width: 20%;">Contacto</th>
                                        <th class="hide-lg" style="width: 15%;">Dominio</th>
                                        <th style="width: 10%;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="locationsTableBody">
                                    {% for location in locations %}
                                        <tr class="location-row" 
                                            data-name="{{ location.name|lower }}" 
                                            data-address="{{ location.address|default('')|lower }}">
                                            <td>
                                                <div class="location-info">
                                                    <div class="location-avatar">
                                                        <i class="fas fa-building" style="font-size: 1.5rem;"></i>
                                                    </div>
                                                    <div class="location-details">
                                                        <span>{{ location.name }}</span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="hide-md">
                                                <div class="address-display">
                                                    <i class="fas fa-map-marker-alt text-muted me-1"></i>
                                                    {{ location.address|slice(0, 30) }}{% if location.address|length > 30 %}...{% endif %}
                                                </div>
                                            </td>
                                            <td>
                                                <div class="contact-info">
                                                    <div class="mb-1">
                                                        <i class="fas fa-phone text-muted me-1"></i>
                                                        {{ location.phone }}
                                                    </div>
                                                    <div>
                                                        <i class="fas fa-envelope text-muted me-1"></i>
                                                        {{ location.email|slice(0, 15) }}{% if location.email|length > 15 %}...{% endif %}
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="hide-lg">
                                                {% if location.domain %}
                                                    <span class="badge bg-success domain-badge">{{ location.domain }}</span>
                                                {% else %}
                                                    <span class="badge bg-secondary domain-badge">Sin dominio</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    <button type="button" class="btn btn-sm action-btn view-btn" 
                                                            data-location-id="{{ location.id }}"
                                                            data-location-name="{{ location.name }}"
                                                            data-location-address="{{ location.address }}"
                                                            data-location-phone="{{ location.phone }}"
                                                            data-location-email="{{ location.email }}"
                                                            data-location-domain="{{ location.domain }}"
                                                            data-location-booking-url="{{ location.bookingUrl }}"
                                                            title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    
                                                    <button type="button" class="btn btn-sm action-btn edit-btn"
                                                            data-location-id="{{ location.id }}"
                                                            title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    
                                                    <button type="button" class="btn btn-sm action-btn delete-btn"
                                                            data-location-id="{{ location.id }}"
                                                            data-location-name="{{ location.name }}"
                                                            data-delete-url="{{ path('location_delete', {'id': location.id}) }}"
                                                            data-csrf-token="{{ csrf_token('delete' ~ location.id) }}"
                                                            title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/location-index.js') }}"></script>
    <script src="{{ asset('scripts/location-modal.js') }}"></script>
{% endblock %}