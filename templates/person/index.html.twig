{% extends 'base.html.twig' %}

{% block title %}Clientes - {{ company.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('styles/person.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="persons-container">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- Header -->
                <div class="persons-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h2 mb-2" style="color: #2c3e50; font-weight: 700;">üë• Clientes</h1>
                            <p class="text-muted mb-0" style="font-size: 1.1rem;">Gestiona tus clientes</p>
                        </div>
                        <!-- Bot√≥n Nuevo Cliente -->
                        <button type="button" class="btn btn-success" data-entity="cliente" data-action="new">
                            <i class="fas fa-plus me-2"></i>Nuevo Cliente
                        </button>
                    </div>
                </div>

                <!-- Flash Messages -->
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-radius: 15px; border: none; box-shadow: 0 4px 15px rgba(40, 167, 69, 0.2);">
                        <i class="fas fa-check-circle me-2"></i>{{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="border-radius: 15px; border: none; box-shadow: 0 4px 15px rgba(220, 53, 69, 0.2);">
                        <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                <!-- Header de b√∫squeda siempre visible -->
                <div class="table-card">
                    <div class="table-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="mb-0">
                                <i class="fas fa-users me-2"></i>
                                {% if patients is not empty %}
                                    ({{ pagination.totalItems }})
                                {% else %}
                                    (0)
                                {% endif %}
                            </h4>
                            <div class="d-flex align-items-center gap-2">
                                <div class="position-relative">
                                    <i class="fas fa-search position-absolute" style="left: 1rem; top: 50%; transform: translateY(-50%); color: #6c757d; z-index: 10;"></i>
                                    <input type="text" 
                                           class="form-control search-input-header ps-5" 
                                           id="searchInput"
                                           value="{{ search }}"
                                           placeholder="Buscar clientes...">
                                    {% if search %}
                                        <button type="button" class="btn btn-sm btn-outline-secondary position-absolute" 
                                                style="right: 0.5rem; top: 50%; transform: translateY(-50%); z-index: 10;"
                                                onclick="window.location.href='{{ path('app_person_index') }}'"
                                                title="Limpiar b√∫squeda">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>

                    {% if patients is empty %}
                        <!-- Estado Vac√≠o -->
                        <div class="empty-state-modern" style="padding: 3rem 2rem;">
                            {% if search %}
                                <h3 class="text-muted mb-3">üîç No se encontraron resultados</h3>
                                <p class="text-muted mb-4" style="font-size: 1.1rem;">No hay clientes que coincidan con "{{ search }}"</p>
                                <button type="button" class="btn btn-outline-primary" 
                                        onclick="window.location.href='{{ path('app_person_index') }}'">
                                    <i class="fas fa-times me-2"></i>Limpiar b√∫squeda
                                </button>
                            {% else %}
                                <h3 class="text-muted mb-3">üë• No hay clientes registrados</h3>
                                <p class="text-muted mb-4" style="font-size: 1.1rem;">Crea tu primer cliente para comenzar a gestionar citas</p>
                            {% endif %}
                        </div>
                    {% else %}
                        <!-- Tabla de Clientes -->
                        <div class="table-responsive">
                            <table class="table table-modern">
                                <thead>
                                    <tr>
                                        <th style="width: 30%;">Cliente</th>
                                        <th class="hide-md" style="width: 20%;">Email</th>
                                        <th class="hide-md" style="width: 15%;">Tel√©fono</th>
                                        <th class="hide-md" style="width: 15%;">Documento</th>
                                        <th style="width: 10%;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="patientsTableBody">
                                    {% for patient in patients %}
                                        <tr class="patient-row">
                                            <td>
                                                <div class="patient-info">
                                                    <div class="patient-avatar hide-md">
                                                        <i class="fas fa-user" style="font-size: 1.5rem;"></i>
                                                    </div>
                                                    <div class="patient-details">
                                                        <span><strong>{{ patient.firstName }} {{ patient.lastName }}</strong></span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="hide-md">
                                                {% if patient.email %}
                                                    <span class="email-display">
                                                        {{ patient.email }}
                                                    </span>
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td class="hide-md">
                                                {% if patient.phone %}
                                                    <span class="phone-display">
                                                        {{ patient.phone }}
                                                    </span>
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td class="hide-md">
                                                {% if patient.idDocument %}
                                                    <span class="document-display">
                                                        {{ patient.idDocument }}
                                                    </span>
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="action-buttons" role="group">
                                                    <a href="{{ path('app_person_show', {'id': patient.id}) }}" 
                                                       class="btn btn-sm action-btn view-btn"
                                                       title="Ver detalles"
                                                       target="_blank"
                                                       rel="noopener">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <button type="button" 
                                                            class="btn btn-sm action-btn edit-btn"
                                                            data-patient-id="{{ patient.id }}"
                                                            title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button type="button" 
                                                            class="btn btn-sm action-btn delete-btn"
                                                            data-patient-id="{{ patient.id }}"
                                                            data-patient-name="{{ patient.fullName }}"
                                                            data-csrf-token="{{ csrf_token('delete' ~ patient.id) }}"
                                                            title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- Controles de Paginaci√≥n -->
                        {% if pagination.totalPages > 1 %}
                            <div class="pagination-container">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="pagination-info">
                                        <span class="text-muted">
                                            Mostrando {{ ((pagination.currentPage - 1) * pagination.itemsPerPage + 1) }} - 
                                            {{ min(pagination.currentPage * pagination.itemsPerPage, pagination.totalItems) }} 
                                            de {{ pagination.totalItems }} clientes
                                        </span>
                                    </div>
                                    
                                    <nav aria-label="Paginaci√≥n de clientes">
                                        <ul class="pagination pagination-modern mb-0">
                                            <!-- Bot√≥n Anterior -->
                                            <li class="page-item {{ not pagination.hasPreviousPage ? 'disabled' : '' }}">
                                                <a class="page-link" 
                                                   href="{{ pagination.hasPreviousPage ? path('app_person_index', {'page': pagination.currentPage - 1, 'search': search}) : '#' }}">
                                                    <i class="fas fa-chevron-left"></i>
                                                </a>
                                            </li>
                                            
                                            <!-- N√∫meros de p√°gina -->
                                            {% set startPage = max(1, pagination.currentPage - 2) %}
                                            {% set endPage = min(pagination.totalPages, pagination.currentPage + 2) %}
                                            
                                            {% if startPage > 1 %}
                                                <li class="page-item">
                                                    <a class="page-link" href="{{ path('app_person_index', {'page': 1, 'search': search}) }}">1</a>
                                                </li>
                                                {% if startPage > 2 %}
                                                    <li class="page-item disabled">
                                                        <span class="page-link">...</span>
                                                    </li>
                                                {% endif %}
                                            {% endif %}
                                            
                                            {% for page in startPage..endPage %}
                                                <li class="page-item {{ page == pagination.currentPage ? 'active' : '' }}">
                                                    <a class="page-link" href="{{ path('app_person_index', {'page': page, 'search': search}) }}">{{ page }}</a>
                                                </li>
                                            {% endfor %}
                                            
                                            {% if endPage < pagination.totalPages %}
                                                {% if endPage < pagination.totalPages - 1 %}
                                                    <li class="page-item disabled">
                                                        <span class="page-link">...</span>
                                                    </li>
                                                {% endif %}
                                                <li class="page-item">
                                                    <a class="page-link" href="{{ path('app_person_index', {'page': pagination.totalPages, 'search': search}) }}">{{ pagination.totalPages }}</a>
                                                </li>
                                            {% endif %}
                                            
                                            <!-- Bot√≥n Siguiente -->
                                            <li class="page-item {{ not pagination.hasNextPage ? 'disabled' : '' }}">
                                                <a class="page-link" 
                                                   href="{{ pagination.hasNextPage ? path('app_person_index', {'page': pagination.currentPage + 1, 'search': search}) : '#' }}">
                                                    <i class="fas fa-chevron-right"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/person-modal.js') }}"></script>
    <script src="{{ asset('scripts/person-index.js') }}"></script>
{% endblock %}