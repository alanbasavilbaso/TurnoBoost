<div class="modal-header">
    <h5 class="modal-title">
        <i class="fas fa-user me-2"></i>
        Detalles del Cliente
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <div class="patient-details-card">
                <div class="patient-header">
                    <div class="patient-avatar-large">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="patient-info">
                        <h4>{{ patient.name }}</h4>
                        <p class="text-muted mb-0">Cliente desde {{ patient.createdAt|date('d/m/Y') }}</p>
                    </div>
                </div>
                
                <div class="patient-contact">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="contact-item">
                                <i class="fas fa-phone text-primary"></i>
                                <div>
                                    <strong>Tel√©fono</strong>
                                    <p>{{ patient.phone ?: 'No especificado' }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="contact-item">
                                <i class="fas fa-envelope text-primary"></i>
                                <div>
                                    <strong>Email</strong>
                                    <p>{{ patient.email ?: 'No especificado' }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                {% if patient.notes %}
                <div class="patient-notes">
                    <h6><i class="fas fa-sticky-note me-2"></i>Notas</h6>
                    <p>{{ patient.notes|nl2br }}</p>
                </div>
                {% endif %}
                
                <div class="patient-stats">
                    <div class="stat-item">
                        <div class="stat-number">{{ patient.appointments|length }}</div>
                        <div class="stat-label">Citas totales</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="fas fa-times me-2"></i>Cerrar
    </button>
    <button type="button" class="btn btn-warning" data-entity="cliente" data-action="edit" data-id="{{ patient.id }}">
        <i class="fas fa-edit me-2"></i>Editar
    </button>
</div>