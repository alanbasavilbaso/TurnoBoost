{% extends 'base.html.twig' %}

{% block title %}Profesionales - {{ clinic.name }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Profesionales</h1>
                <a href="{{ path('app_professional_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nuevo Profesional
                </a>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <!-- Barra de búsqueda y filtros -->
            <div class="card mb-1">
                <div class="card-body">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" 
                                       class="form-control" 
                                       id="searchInput"
                                       placeholder="Buscar por nombre, especialidad o email...">
                            </div>
                        </div>
                        {# <div class="col-md-3">
                            <select class="form-select" id="statusFilter">
                                <option value="">Todos los estados</option>
                                <option value="active">Activos</option>
                                <option value="inactive">Inactivos</option>
                            </select>
                        </div> #}
                        <div class="col-md-3">
                            <select class="form-select" id="sortBy">
                                <option value="name">Ordenar por nombre</option>
                                <option value="specialty">Por especialidad</option>
                                <option value="services">Por servicios</option>
                                <option value="created">Por fecha</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            <button type="button" class="btn btn-outline-secondary w-100" id="clearSearch">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="mt-2">
                        <small class="text-muted" id="searchResults" style="display: none;">
                            <i class="fas fa-info-circle"></i> 
                            <span id="resultsCount">0</span> resultado(s) encontrado(s)
                        </small>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    {% if professionals|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Profesional</th>
                                        <th>Especialidad</th>
                                        <th class="d-none d-lg-block">Contacto</th>
                                        <th>Estado</th>
                                        <th>Servicios</th>
                                        <th width="200">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="professionalsTableBody">
                                    {% for professional in professionals %}
                                        <tr class="professional-row" 
                                            data-name="{{ professional.name|lower }}" 
                                            data-specialty="{{ professional.specialty|default('')|lower }}"
                                            data-email="{{ professional.email|default('')|lower }}"
                                            data-status="{{ professional.active ? 'active' : 'inactive' }}"
                                            data-services="{{ professional.professionalServices|length }}"
                                            data-created="{{ professional.createdAt ? professional.createdAt|date('Y-m-d') : '' }}">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle me-3">
                                                        <i class="fas fa-user-md"></i>
                                                    </div>
                                                    <div>
                                                        <strong>{{ professional.name }}</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                {% if professional.specialty %}
                                                    <span class="badge bg-primary">{{ professional.specialty }}</span>
                                                {% else %}
                                                    <span class="text-muted">Sin especialidad</span>
                                                {% endif %}
                                            </td>
                                            <td class="d-none d-lg-table">
                                                {% if professional.email %}
                                                    <div><i class="fas fa-envelope text-muted me-1"></i> {{ professional.email }}</div>
                                                {% endif %}
                                                {% if professional.phone %}
                                                    <div><i class="fas fa-phone text-muted me-1"></i> {{ professional.phone }}</div>
                                                {% endif %}
                                                {% if not professional.email and not professional.phone %}
                                                    <span class="text-muted">Sin contacto</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if professional.active %}
                                                    <span class="badge bg-success">Activo</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Inactivo</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge bg-info">{{ professional.professionalServices|length }}</span>
                                            </td>
                                            <td>
                                                <div class="btn-group d-flex" role="group">
                                                    <a href="{{ path('app_professional_show', {'id': professional.id}) }}" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_professional_edit', {'id': professional.id}) }}" class="btn btn-sm btn-outline-secondary">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button class="btn btn-sm btn-outline-danger" type="button" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#deleteModal" 
                                                            data-professional-id="{{ professional.id }}" 
                                                            data-professional-name="{{ professional.name }}" 
                                                            data-delete-url="{{ path('app_professional_delete', {'id': professional.id}) }}" 
                                                            data-csrf-token="{{ csrf_token('delete' ~ professional.id) }}">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-user-md fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No hay profesionales registrados</h5>
                            <p class="text-muted">Comience agregando su primer profesional.</p>
                            <a href="{{ path('app_professional_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Agregar Profesional
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmación para eliminar -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div class="mb-3">
                    <i class="fas fa-user-times fa-3x text-danger mb-3"></i>
                </div>
                <h6 class="mb-3">¿Está seguro de eliminar el profesional?</h6>
                <p class="text-muted mb-0">
                    <strong id="professionalName"></strong>
                </p>
                <small class="text-muted">Esta acción no se puede deshacer.</small>
            </div>
            <div class="modal-footer border-0 justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i> Cancelar
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <input type="hidden" name="_token" id="csrfToken">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('styles/professional-table.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/professional-table.js') }}"></script>
{% endblock %}
