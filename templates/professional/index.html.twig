{% extends 'base.html.twig' %}

{% block title %}Profesionales - {{ location.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('styles/professional-table.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('styles/professional-form.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/wizard.css') }}">
    
{% endblock %}

{% block body %}
<div class="professionals-container">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- Header Mejorado -->
                <div class="professionals-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h2 mb-2" style="color: #2c3e50; font-weight: 700;">üë®‚Äç‚öïÔ∏è Profesionales</h1>
                            <p class="text-muted mb-0" style="font-size: 1.1rem;">Gestiona tu <strong>equipo de profesionales</strong></p>
                        </div>
                        <!-- Bot√≥n Nuevo Profesional usando modal espec√≠fico -->
                        <button type="button" class="btn btn-success" 
                                data-bs-toggle="modal"
                                data-bs-target="#professionalModal"
                                data-action="new">
                            <i class="fas fa-plus me-2"></i>Nuevo Profesional
                        </button>
                    </div>
                </div>

                <!-- Flash Messages -->
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-radius: 15px; border: none; box-shadow: 0 4px 15px rgba(40, 167, 69, 0.2);">
                        <i class="fas fa-check-circle me-2"></i>{{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="border-radius: 15px; border: none; box-shadow: 0 4px 15px rgba(220, 53, 69, 0.2);">
                        <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                {% if professionals is empty %}
                    <!-- Estado Vac√≠o Mejorado -->
                    <div class="empty-state-modern">
                        <div class="mb-4">
                            <i class="fas fa-user-md" style="font-size: 4rem; color: #28a745; margin-bottom: 1rem;"></i>
                        </div>
                        <h3 class="text-muted mb-3">üéØ No hay profesionales registrados</h3>
                        <p class="text-muted mb-4" style="font-size: 1.1rem;">Agrega tu primer profesional para comenzar a gestionar servicios y citas</p>
                    </div>
                {% else %}
                    <!-- Tabla de Profesionales Mejorada -->
                    <div class="table-card">
                        <div class="table-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h4 class="mb-0">
                                    <i class="fas fa-users me-2"></i>
                                    ({{ professionals|length }})
                                </h4>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="position-relative">
                                        <i class="fas fa-search position-absolute" style="left: 1rem; top: 50%; transform: translateY(-50%); color: #6c757d; z-index: 10;"></i>
                                        <input type="text" 
                                               class="form-control search-input-header ps-5" 
                                               id="searchInput"
                                               placeholder="Buscar profesionales...">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-modern">
                                <thead>
                                    <tr>
                                        <th style="width: 30%;">Profesional</th>
                                        {# <th style="width: 20%;">Especialidad</th> #}
                                        <th class="hide-md" style="width: 25%;">Contacto</th>
                                        <th style="width: 10%;">Estado</th>
                                        <th class="hide-lg">Servicios</th>
                                        <th style="width: 5%;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="professionalsTableBody">
                                    {% for professional in professionals %}
                                        <tr class="professional-row" 
                                            data-name="{{ professional.name|lower }}" 
                                            data-specialty="{{ professional.specialty|default('')|lower }}"
                                            data-email="{{ professional.email|default('')|lower }}"
                                            data-status="{{ professional.active ? 'active' : 'inactive' }}"
                                            data-services="{{ professional.professionalServices|length }}"
                                            data-created="{{ professional.createdAt ? professional.createdAt|date('Y-m-d') : '' }}">
                                            <td>
                                                <div class="professional-info">
                                                    <div class="professional-avatar">
                                                        <i class="fas fa-user" style="font-size: 1.5rem;"></i>
                                                    </div>
                                                    <div class="professional-details">
                                                        <span>{{ professional.name }}</span>
                                                    </div>
                                                </div>
                                            </td>
                                            {# <td>
                                                {% if professional.specialty %}
                                                    <span class="specialty-badge">
                                                        <i class="fas fa-stethoscope"></i>
                                                        {{ professional.specialty }}
                                                    </span>
                                                {% else %}
                                                    <span class="text-muted">Sin especialidad</span>
                                                {% endif %}
                                            </td> #}
                                            <td class="hide-md">
                                                <div class="contact-info">
                                                    {% if professional.email %}
                                                        <div class="contact-item">
                                                            <i class="fas fa-envelope"></i>
                                                            {{ professional.email }}
                                                        </div>
                                                    {% endif %}
                                                    {% if professional.phone %}
                                                        <div class="contact-item">
                                                            <i class="fas fa-phone"></i>
                                                            {{ professional.phone }}
                                                        </div>
                                                    {% endif %}
                                                    {% if not professional.email and not professional.phone %}
                                                        <span class="text-muted">Sin contacto</span>
                                                    {% endif %}
                                                </div>
                                            </td>
                                            <td>
                                                {% if professional.active %}
                                                    <span class="badge bg-success status-badge">‚úÖ Activo</span>
                                                {% else %}
                                                    <span class="badge bg-secondary status-badge">‚è∏Ô∏è Inactivo</span>
                                                {% endif %}
                                            </td>
                                            <td class="hide-lg">
                                                <span class="services-count">
                                                    <i class="fas fa-briefcase-medical"></i>
                                                    {{ professional.professionalServices|length }}
                                                </span>
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    <!-- Bot√≥n Ver usando modal gen√©rico -->
                                                    {# <button type="button" 
                                                            class="btn btn-sm action-btn view-btn" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#entityDetailsModal"
                                                            data-professional-id="{{ professional.id }}"
                                                            data-action="view"
                                                            title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </button> #}
                                                    <!-- Bot√≥n Editar usando modal espec√≠fico -->
                                                    <button type="button" 
                                                            class="btn btn-sm action-btn edit-btn" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#professionalModal"
                                                            data-professional-id="{{ professional.id }}"
                                                            data-action="edit"
                                                            title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <!-- Bot√≥n Eliminar usando modal gen√©rico -->
                                                    <button type="button" 
                                                            class="btn btn-sm action-btn delete-btn" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#entityDeleteModal" 
                                                            data-entity-id="{{ professional.id }}" 
                                                            data-entity-name="{{ professional.name }}" 
                                                            data-delete-url="{{ path('app_professional_delete', {'id': professional.id}) }}" 
                                                            data-csrf-token="{{ csrf_token('delete' ~ professional.id) }}"
                                                            title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>


<!-- Modal Espec√≠fico para Profesionales -->
<div class="modal fade" id="professionalModal" tabindex="-1" aria-labelledby="professionalModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="professionalModalLabel">
                    <i class="fas fa-user-md me-2"></i>
                    <span id="modalTitle">Nuevo Profesional</span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div id="professionalFormContainer">
                    <!-- El formulario se cargar√° aqu√≠ din√°micamente -->
                    <div class="text-center p-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                        <p class="mt-3 text-muted">Cargando formulario...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/professional-table.js') }}"></script>
    <script src="{{ asset('scripts/professional-modal.js') }}"></script>
    <script src="{{ asset('scripts/professional-form.js') }}"></script>
    <script src="{{ asset('scripts/wizard.js') }}"></script>
    
    <script>
    // Inicializar el modal espec√≠fico de profesionales
    document.addEventListener('DOMContentLoaded', function() {
        window.professionalModal = new ProfessionalModal({
            modalId: 'professionalModal',
            formContainerId: 'professionalFormContainer',
            baseUrl: '{{ path('app_professional_index') }}',
            createUrl: '{{ path('app_professional_new_form') }}',  // Ruta que devuelve solo el formulario
            editUrl: '{{ path('app_professional_form', {'id': '__ID__'}) }}'  // Ruta que devuelve solo el formulario
        });
        
        new EntityModalManager({
            entityName: 'profesional',
            entityNamePlural: 'profesionales',
            baseUrl: '/profesionales',
            deleteWarning: 'Esta acci√≥n no se puede deshacer.'
        });
    });
    </script>
{% endblock %}

