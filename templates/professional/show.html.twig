{% extends 'base.html.twig' %}

{% block title %}{{ professional.name }} - Profesional{% endblock %}

{% block body %}
<div class="container">
    <!-- Header -->
    <div class="form-card d-flex align-items-center mb-4">
        <a href="{{ path('app_professional_index') }}" class="btn btn-outline-secondary me-3">
            <i class="fas fa-arrow-left"></i>
        </a>
        <div>
            <h2 class="mb-0">
                <i class="fas fa-user-md text-primary me-2"></i>
                {{ professional.name }}
                {% if not professional.active %}
                    <span class="badge bg-secondary ms-2">Inactivo</span>
                {% else %}
                    <span class="badge bg-success ms-2">Activo</span>
                {% endif %}
            </h2>
            <p class="text-muted mb-0">{{ professional.clinic.name }}</p>
        </div>
    </div>

    <div class="row">
        <!-- Información Básica -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Información Básica</h5>
                </div>
                <div class="card-body">
                    {% if professional.specialty %}
                        <p><strong>Especialidad:</strong> {{ professional.specialty }}</p>
                    {% endif %}
                    {% if professional.email %}
                        <p><strong>Email:</strong> <a href="mailto:{{ professional.email }}">{{ professional.email }}</a></p>
                    {% endif %}
                    {% if professional.phone %}
                        <p><strong>Teléfono:</strong> <a href="tel:{{ professional.phone }}">{{ professional.phone }}</a></p>
                    {% endif %}
                    <p><strong>Estado:</strong> 
                        {% if professional.active %}
                            <span class="badge bg-success">Activo</span>
                        {% else %}
                            <span class="badge bg-secondary">Inactivo</span>
                        {% endif %}
                    </p>
                    <p><strong>Fecha de registro:</strong> {{ professional.createdAt|date('d/m/Y H:i') }}</p>
                    {% if professional.updatedAt != professional.createdAt %}
                        <p><strong>Última actualización:</strong> {{ professional.updatedAt|date('d/m/Y H:i') }}</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Estadísticas -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Estadísticas</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="border-end">
                                <h4 class="text-primary mb-0">{{ professional.professionalServices|length }}</h4>
                                <small class="text-muted">Servicios</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="border-end">
                                <h4 class="text-success mb-0">{{ professional.appointments|length }}</h4>
                                <small class="text-muted">Citas Totales</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <h4 class="text-info mb-0">{{ professional.availabilities|length }}</h4>
                            <small class="text-muted">Horarios</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Servicios -->
    {% if professional.professionalServices|length > 0 %}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-list me-2"></i>Servicios que Ofrece</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    {% for professionalService in professional.professionalServices %}
                        <div class="list-group-item border-0 px-0 py-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 text-primary">
                                        <i class="fas fa-user-md text-primary me-2"></i>
                                        {{ professionalService.service.name }}
                                    </h6>
                                    <p class="mb-1 text-muted small">
                                        {{ professionalService.service.description|default('Servicio profesional especializado') }}
                                    </p>
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>
                                        Duración: {{ professionalService.formattedDuration }}
                                    </small>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-success fs-6 px-3 py-2">
                                        ${{ professionalService.effectivePrice|number_format(2, '.', ',') }}
                                    </span>
                                </div>
                            </div>
                        </div>
                        {% if not loop.last %}
                            <hr class="my-0">
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}

</div>
{% endblock %}