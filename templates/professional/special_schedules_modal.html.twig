<div class="modal-header">
    <h5 class="modal-title">
        <i class="fas fa-calendar-alt me-2"></i>
        Jornadas Especiales - {{ professional.name }}
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    {% if specialSchedules|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Hora Desde</th>
                        <th>Hora Hasta</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for schedule in specialSchedules %}
                        <tr>
                            <td>{{ schedule.date|date('d/m/Y') }}</td>
                            <td>{{ schedule.startTime|date('H:i') }}</td>
                            <td>{{ schedule.endTime|date('H:i') }}</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-danger delete-special-schedule"
                                        data-schedule-id="{{ schedule.id }}">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="text-center py-4">
            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
            <p class="text-muted">No hay jornadas especiales configuradas para este profesional.</p>
        </div>
    {% endif %}
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-primary" id="addSpecialScheduleBtn">
        <i class="fas fa-plus me-2"></i>Agregar Jornada Especial
    </button>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
</div>