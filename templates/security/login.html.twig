{% extends 'base.html.twig' %}

{% block title %}Iniciar SesiÃ³n - TurnoBoost{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Solo aplicar flexbox al body en la pÃ¡gina de login */
        body.login-page {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
        }
        .login-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            padding: 2rem;
            max-width: 400px;
            width: 100%;
        }
        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        .login-header h1 {
            color: #333;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        .login-header p {
            color: #666;
            margin: 0;
        }
        .form-control {
            border-radius: 10px;
            border: 2px solid #e9ecef;
            padding: 12px 15px;
            margin-bottom: 1rem;
        }
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 12px;
            font-weight: 600;
            margin-top: 1rem;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
        .alert {
            border-radius: 10px;
            margin-bottom: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
<script>
    document.body.classList.add('login-page');
</script>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="login-card">
                <div class="login-header">
                    <h1>ðŸš€ TurnoBoost</h1>
                    <p>Inicia sesiÃ³n en tu cuenta</p>
                </div>

                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="mb-3">
                        {{ form_label(form._username, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form._username) }}
                        {{ form_errors(form._username) }}
                    </div>
    
                    <div class="mb-3">
                        {{ form_label(form._password, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form._password) }}
                        {{ form_errors(form._password) }}
                    </div>
    
                    {{ form_widget(form.submit) }}
                {{ form_end(form) }}

                <div class="text-center mt-3">
                    <small class="text-muted">
                        Â¿Problemas para acceder? Contacta al administrador
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}