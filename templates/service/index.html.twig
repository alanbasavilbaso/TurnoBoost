{% extends 'base.html.twig' %}

{% block title %}Servicios - {{ company.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('styles/service.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="services-container">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- Header Mejorado -->
                <div class="services-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h2 mb-2" style="color: #2c3e50; font-weight: 700;">âœ¨ Servicios</h1>
                            <p class="text-muted mb-0" style="font-size: 1.1rem;">Gestiona los servicios</p>
                        </div>
                        <!-- BotÃ³n Nuevo Servicio -->
                        <button type="button" class="btn btn-success" data-entity="servicio" data-action="new">
                            <i class="fas fa-plus me-2"></i>Nuevo Servicio
                        </button>
                    </div>
                </div>

                <!-- Flash Messages -->
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-radius: 15px; border: none; box-shadow: 0 4px 15px rgba(40, 167, 69, 0.2);">
                        <i class="fas fa-check-circle me-2"></i>{{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="border-radius: 15px; border: none; box-shadow: 0 4px 15px rgba(220, 53, 69, 0.2);">
                        <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                {% if services is empty %}
                    <!-- Estado VacÃ­o Mejorado -->
                    <div class="empty-state-modern">
                        <div class="mb-4">
                            <i class="fas fa-concierge-bell" style="font-size: 4rem; color: #28a745; margin-bottom: 1rem;"></i>
                        </div>
                        <h3 class="text-muted mb-3">ðŸŽ¯ No hay servicios registrados</h3>
                        <p class="text-muted mb-4" style="font-size: 1.1rem;">Crea tu primer servicio para comenzar a ofrecer citas a tus clientes</p>
                    </div>
                {% else %}
                    <!-- Tabla de Servicios Mejorada -->
                    <div class="table-card">
                        <div class="table-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h4 class="mb-0">
                                    <i class="fas fa-concierge-bell me-2"></i>
                                    ({{ services|length }})
                                </h4>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="position-relative">
                                        <i class="fas fa-search position-absolute" style="left: 1rem; top: 50%; transform: translateY(-50%); color: #6c757d; z-index: 10;"></i>
                                        <input type="text" 
                                               class="form-control search-input-header ps-5" 
                                               id="searchInput"
                                               placeholder="Buscar servicios...">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-modern">
                                <thead>
                                    <tr>
                                        <th style="width: 35%;">Servicio</th>
                                        <th class="hide-md" style="width: 15%;">DuraciÃ³n</th>
                                        <th class="hide-md" style="width: 15%;">Precio</th>
                                        <th style="width: 12%;">Estado</th>
                                        <th class="hide-lg" style="width: 13%;">Profesionales</th>
                                        <th style="width: 10%;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="servicesTableBody">
                                    {% for service in services %}
                                        <tr class="service-row" 
                                            data-name="{{ service.name|lower }}" 
                                            data-description="{{ service.description|default('')|lower }}">
                                            <td>
                                                <div class="service-info">
                                                    <div class="service-avatar hide-md">
                                                        <i class="fas fa-concierge-bell " style="font-size: 1.5rem;"></i>
                                                    </div>
                                                    <div class="service-details">
                                                        <span>{{ service.name }}</span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="hide-md">
                                                <span class="duration-badge">
                                                    <i class="fas fa-clock"></i>
                                                    {{ service.defaultDurationMinutes }}m
                                                </span>
                                            </td>
                                            <td class="hide-md">
                                                {% if service.price %}
                                                    <div class="price-display">${{ service.priceAsFloat|number_format(2, ',', '.') }}</div>
                                                {% else %}
                                                    <span class="text-muted">Sin precio</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if service.active %}
                                                    <span class="badge bg-success status-badge">Activo</span>
                                                {% else %}
                                                    <span class="badge bg-secondary status-badge">Inactivo</span>
                                                {% endif %}
                                            </td>
                                            <td class="hide-lg">
                                                <span class="professionals-count">
                                                    <i class="fas fa-users"></i>
                                                    {{ service.professionalServices|length }}
                                                </span>
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    <!-- En la tabla, cambiar los botones de acciÃ³n -->
                                                    {% if service.active %}
                                                        <button type="button" class="btn btn-sm action-btn view-btn" 
                                                                data-service-id="{{ service.id }}"
                                                                data-service-name="{{ service.name }}"
                                                                data-service-description="{{ service.description }}"
                                                                data-service-duration="{{ service.defaultDurationMinutes }}"
                                                                data-service-price="{{ service.priceAsFloat }}"
                                                                data-service-active="{{ service.active ? 'true' : 'false' }}"
                                                                data-service-professionals="{{ service.professionalServices|length }}"
                                                                title="Ver detalles">
                                                            <i class="fas fa-eye"></i>
                                                        </button>
                                                        
                                                        <button type="button" class="btn btn-sm action-btn edit-btn"
                                                                data-service-id="{{ service.id }}"
                                                                title="Editar">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                        
                                                        <button type="button" class="btn btn-sm action-btn delete-btn"
                                                                data-service-id="{{ service.id }}"
                                                                data-service-name="{{ service.name }}"
                                                                data-delete-url="{{ path('app_service_delete', {'id': service.id}) }}"
                                                                data-csrf-token="{{ csrf_token('delete' ~ service.id) }}"
                                                                title="Desactivar">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    {% endif %}
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/service-index.js') }}"></script>
    <script src="{{ asset('scripts/service-modal.js') }}"></script>
{% endblock %}